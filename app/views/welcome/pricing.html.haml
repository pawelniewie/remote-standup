.block
  / Default Pricing Table
  %h2.title-divider
    %span
      Pricing
      %span.de-em Plans
    %small Sign up in 20 seconds, upgrade, downgrade or cancel any time.
  / Stack 1
  .row.pricing-stack
    .col-md-3.col-md-offset-3
      .well
        %h3.title Personal
        %p.price
          %span.currency $
          %span.digits
            0
          %span.term /MONTH
        %ul.unstyled.points
          %li 1 person
          %li Unlimited storage
          %li Email support
    .col-md-3
      .well.active
        %h3.title
          %span.em Business
        %p.price
          %span.currency $
          %span.digits
            5
          %span.term /USER MONTH
        %ul.unstyled.points
          %li Unlimited users
          %li Unlimited storage
          %li Email support

  .row
    / Plan features
    .well.well-mini.pull-center
      %h4.inline-el.pad-right
        %span
          Try it for FREE
          = succeed ":" do
            %span.de-em for 30 days
      %p.inline-el.pad-left.muted
        %a.btn.btn-primary{href: new_user_registration_path} Start Today! No credit card required
        %p EU customers will be charged VAT at 23%
