%h2.title-divider
  %span Resend confirmation instructions
= form_for(resource, :as => resource_name, :url => confirmation_path(resource_name), :html => { :method => :post, role: 'form' }) do |f|
  = devise_error_messages!
  .form-group
    = f.label :email
    = f.email_field :email, class: 'form-control'
  .form-group= f.submit "Resend confirmation instructions", class: 'btn btn-primary'
= render "devise/shared/links"
