%h2.title-divider
  %span= t 'devise.invitations.edit.header'
= form_for resource, :as => resource_name, :url => invitation_path(resource_name), :html => { :method => :put, role: 'form' } do |f|
  = devise_error_messages!
  = f.hidden_field :invitation_token
  .form-group
    = f.label :password
    %br/
    = f.password_field :password, class: 'form-control'
  .form-group
    = f.label :password_confirmation
    %br/
    = f.password_field :password_confirmation, class: 'form-control'
  .form-group= f.submit t("devise.invitations.edit.submit_button"), class: 'btn btn-primary'
